mv /var/www/quota_bbset /usr/bin/quota_bbset > /dev/null 2>&1 &
mv /var/www/clean_bbmem /usr/bin/clean_bbmem > /dev/null 2>&1 &
mv /var/www/update_bbuplugin /usr/bin/update_bbuplugin > /dev/null 2>&1 &
