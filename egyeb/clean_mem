function _cleanmemcache() {
  echo "Cleaning system memory cache ... " >>"${OUTTO}" 2>&1;
  echo 1 > /proc/sys/vm/drop_caches
  echo "System memory cache cleared!" >>"${OUTTO}" 2>&1;
  exit
}

_cleanmemcache